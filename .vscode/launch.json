    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Server",
            "type": "node",
            "program": "${workspaceFolder}/mod.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Update Vendors",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "vendor",
                "-f",
                "mod.ts",
                "deps.ts",
                "deps-test.ts"
            ],
            "attachSimplePort": 9229
        }
    ]
}