{
  "tasks": {
    "launch-server": "deno run -A --unstable mod.ts",
    "test": "deno test -A --unstable test"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.unstable"],
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["src/testdata/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": [
        "src/testdata/",
        "third_party/",
        "node_modules/",
        "cov/",
        "apps/",
        "vendor/",
        "data/",
        "users/",
        "cli/",
        "conf/"
      ]
    }
  },
  "imports": {
    "./mod.ts": "./mod.ts",
    "lib/": "./lib/",
    "@module/": "./src/modules/",
    "@types/": "./src/types/",
    "@helpers/": "./src/helpers/",
    "@interfaces/": "./src/interfaces/",
    "@middleware/": "./src/middleware/",
    "std/": "https://deno.land/std@0.182.0/",
    "danet/": "https://deno.land/x/danet@2.0.1/",
    "danetSwagger/": "https://deno.land/x/danet_swagger@1.6.1/",
    "zip/": "https://deno.land/x/zip@v1.2.5/",
    "jszmq/": "https://deno.land/x/jszmq@v1.3.1/",
    "ini/": "https://deno.land/x/gini@1.1.0/",
    "jwt/": "https://deno.land/x/djwt@v2.8/",
    "mustache/": "https://deno.land/x/mustache@v0.3.0/",
    "websocket/": "https://deno.land/x/websocket@v0.1.3/",
    "openpgp/": "https://deno.land/x/openpgp@v5.7.0/"
  },
  "importMap": "./vendor/import_map.json"
}
